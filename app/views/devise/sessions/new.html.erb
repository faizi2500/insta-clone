<div class="login-container border">

<%= image_tag "insta-written", style: 'width:40vw;margin-top:5%;' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="enter-inputs mt-5">
    <div class="field mb-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " ", class: "input-field-login ms-3 px-2" %>
      <%=f.label :email, "Username or email", class: "sign_in_labels ms-3 px-1" %>
    </div>

    <div class="field mt-1">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: " ",  class: "input-field-login ms-3 px-2" %>
      <%= f.label :password, "Your Password", class: "sign_in_labels ms-3 px-1" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me-login mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions login-btn-div my-3">
    <%= f.submit "Log in", class: "login-btn btn rounded" %>
  </div>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="forgot-pswd-container mb-3">
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot_pswd_login" %><br />
    </div>
  <% end %>

<% end %>
</div>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="new_account_container border">
    <p class="mt-3"> Don't have an account?
      <span> <%= link_to "Sign up", new_registration_path(resource_name) %></span>
    </p>
  </div>
<% end %>
